<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExchangeRates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/p_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Toolbar. -->
    <style name="Widget.Rate.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.ExchangeRates</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Rate.Toolbar</item>
    </style>

    <style name="TextAppearance.Rate.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ToolbarColoredIcon" parent="Theme.ExchangeRates">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="DatePickerTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/p_dark</item>
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <item name="colorControlHighlight">@color/p_light</item>
        <item name="android:textColorSecondary">@color/p_light</item>
    </style>

</resources>